doctype html
html( lang='en' )
	head
		block head
			meta( charset='utf-8' )
			meta( http-equiv='X-UA-Compatible', content='IE=edge,chrome=1' )
			meta( name='viewport', content='width=device-width' )

			title [#{resume.user.name}] resume 2014-2015

			link( rel='stylesheet', href='http://fonts.googleapis.com/css?family=Roboto:300,900,400' )
			link( rel='stylesheet', href='css/layout.min.css' )
			link( rel='stylesheet', href='css/global.css' )
			script( src='js/jquery.min.js' )
			script( src='js/app.js' )

	body
		header.header
			h1.ttl.header-ttl #{resume.user.name}

			.header-info
				ul.lst.header-info-contact-lst
					each link, i in resume.user.links
						li.itm.header-info-contact-itm
							a(href="#{link}").lnk.header-info-contact-lnk #{i}

				aside.mission
					blockquote.mission-philosophy #{resume.quote}
						
					blockquote.mission-skills #{resume.skills}

		main.posts
			blockquote.posts-mission-quote #{resume.mission}
			h2.ttl.posts-ttl Work History

			.posts-label
				span.nfo.posts-label-nfo.posts-label-info-company Company
				span.nfo.posts-label-nfo.posts-label-nfo-position Position
				span.nfo.posts-label-nfo.posts-label-nfo-related Related Projects

			each role, i in resume.timeline
				article.post
					header.post-header
						h3.ttl.post-header-ttl-company #{role.company}
						h4.ttl.post-header-ttl-position( itemprop="jobTitle" ) #{role.position}
						h5.ttl.post-header-ttl-length #{role.start} - #{role.end}
						
						ul.lst.post-header-related-lst
							each project in role.projects
								li.itm.post-header-related-itm
									a.lnk.post-header-related-lnk(itemprop="url", href="http://#{ project }") #{ project }

					section.post-description	#{role.description}
				