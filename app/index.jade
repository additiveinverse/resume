doctype html
html( lang='en' )
	head
		block head
			meta( charset='utf-8' )
			meta( http-equiv='X-UA-Compatible', content='IE=edge,chrome=1' )
			meta( name='viewport', content='width=device-width' )

			title [#{resume.user.name}] resume 2014-2015

			link( rel='stylesheet', href='http://fonts.googleapis.com/css?family=Roboto:300,900,400' )
			link( rel='stylesheet', href='css/layout.min.css' )
			link( rel='stylesheet', href='css/global.css' )
			script( src='js/jquery.min.js' )
			script( src='js/app.js' )

	body
		.resume
			header.header.header-info
				h1.ttl.header-info-ttl #{resume.user.name}

				ul.lst.header-info-contact-lst
					each link, i in resume.user.links
						li.itm.header-info-contact-itm
							a(href="#{link}").lnk.header-info-contact-lnk #{i}
					
					li.itm.header-info-contact-itm location: #{resume.user.location}

			aside.mission
				blockquote.mission-quote #{resume.mission}
				
				h1.mission-about about me
				p #{resume.quote}
				
				h2.mission-skills skills 
				blockquote.mission-quote #{resume.skills}