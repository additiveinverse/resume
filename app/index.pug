doctype html
html( lang='en' )
	head
		block head
			meta( charset='utf-8' )
			meta( http-equiv='X-UA-Compatible', content='IE=edge,chrome=1' )
			meta( name='viewport', content='width=device-width' )

			title #{resume.user.name} [ resume #{ new Date().getFullYear() } ]
			link( rel='stylesheet', href='https://fonts.googleapis.com/css?family=Lato:300,400,900' )
			link( rel='stylesheet', href='css/global.css' )

			script.
				(function(i,s,o,g,r,a,m){
					i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){ (i[r].q=i[r].q||[]).push(arguments)},
					i[r].l=1*new Date();a=s.createElement(o),
					m=s.getElementsByTagName(o)[0];
					a.async=1;
					a.src=g;
					m.parentNode.insertBefore(a,m)
				})(window,document,'script','//www.google-analytics.com/analytics.js','ga');
				ga('create', 'UA-58831899-1', 'auto');
				ga('send', 'pageview');

	body
		header.header
			.header--wrap
				h1.header__title #{resume.user.name}
				h2.header__subtitle #{ resume.user.description }


			ul.header__contact-list
				each link, i in resume.user.links
					li.header__contact-listitem
						a( href= link ).header__contact-listitem--link #{i}

		//- aside.mission
		//- 	blockquote.mission-quote.mission-quote-ethics #{resume.mission}

		main.main
			h2.main__title Work History

			each role, i in resume.timeline
				article.post
					header.post-header
						h3.ttl.post-header-ttl-company #{role.company}
						ul.lst.post-header-role-lst
							li.itm.post-header-role-lst-itm.post-header-role-position( itemprop="jobTitle" )
								h4 #{role.position}
							li.itm.post-header-role-lst-itm.post-header-role-duration #{role.start} - #{role.end}

					section.post__description
						p #{role.description}

						if role.projects
							h5.post__related-title project work:
							ul.post__related-list
								each project in role.projects
									li.post__related-listitem
										a.post__related-listitem--link(itemprop="url", href="http://#{ project }") #{ project }

			blockquote.mission-quote.mission-quote-philosophy #{resume.quote}
			blockquote.mission-quote.mission-quote-skills #{resume.skills}